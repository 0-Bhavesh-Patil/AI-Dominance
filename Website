    <script>
        // --- Gemini API Functionality (RETAINED) ---
        const userPrompt = "You are a world-class AI Content Strategy Consultant for a firm named Synapse Digital. Your goal is to analyze the user's provided content and provide a concise, professional, and actionable 3-point critique focused on AI visibility. Always maintain a highly authoritative tone. Use Markdown formatting for the critique.";
        
        async function runAudit() {
            const contentInput = document.getElementById('content-input').value.trim();
            const outputDiv = document.getElementById('audit-output');
            const loadingIndicator = document.getElementById('loading-indicator');
            const placeholderText = document.getElementById('placeholder-text');
            const auditButton = document.getElementById('audit-button');

            if (!contentInput) {
                outputDiv.innerHTML = '<p class="text-red-400">Please paste content into the field above to run the audit.</p>';
                return;
            }

            outputDiv.innerHTML = '';
            if(placeholderText) placeholderText.classList.add('hidden');
            loadingIndicator.classList.remove('hidden');
            auditButton.disabled = true;
            auditButton.textContent = 'Analyzing...';
            auditButton.classList.remove('bg-indigo-600', 'hover:bg-indigo-700');
            auditButton.classList.add('bg-gray-700');

            const API_KEY = "";
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${API_KEY}`;
            const userQuery = `Critique this content for AI visibility, conversational potential, and semantic optimization: "${contentInput}"`;

            const payload = {
                contents: [{ parts: [{ text: userQuery }] }],
                tools: [{ "google_search": {} }],
                systemInstruction: { parts: [{ text: userPrompt }] },
            };

            let response;
            for (let i = 0; i < 3; i++) { 
                try {
                    response = await fetch(apiUrl, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });
                    if (response.ok) break;
                } catch (error) {
                    console.error("Fetch attempt failed:", error);
                }
                await new Promise(resolve => setTimeout(resolve, Math.pow(2, i) * 2000));
            }

            try {
                if (!response || !response.ok) {
                    throw new Error(`API request failed with status: ${response ? response.status : 'No response'}`);
                }
                
                const result = await response.json();
                const text = result.candidates?.[0]?.content?.parts?.[0]?.text || "Error: Could not retrieve analysis. Please try again.";
                
                outputDiv.textContent = text; 

            } catch (error) {
                console.error("Audit failed:", error);
                outputDiv.innerHTML = `<p class="text-red-400">Analysis failed due to a communication error. Please ensure your API key is correctly configured and try again.</p>`;
            } finally {
                loadingIndicator.classList.add('hidden');
                auditButton.disabled = false;
                auditButton.textContent = 'Run Live Strategy Audit →';
                auditButton.classList.remove('bg-gray-700');
                auditButton.classList.add('bg-indigo-600', 'hover:bg-indigo-700');
            }
        }

        // --- Mouse Light Animation (RETAINED) ---
        const mouseLight = document.getElementById('mouse-light');
        let mouseX = 0;
        let mouseY = 0;
        let lightX = 0;
        let lightY = 0;
        const speed = 0.1; // Smoothness of follow (0-1, lower is smoother)

        function animateLight() {
            // Linear Interpolation (LERP) for smooth following
            lightX += (mouseX - lightX) * speed;
            lightY += (mouseY - lightY) * speed;
            
            // Direct transform manipulation
            mouseLight.style.transform = `translate(${lightX}px, ${lightY}px) translate(-50%, -50%)`;
            
            // Use requestAnimationFrame for high-performance animation
            requestAnimationFrame(animateLight);
        }

        document.addEventListener('mousemove', (e) => {
            mouseX = e.clientX;
            mouseY = e.clientY;
        });

        // Start the animation loop
        requestAnimationFrame(animateLight);

        // --- Number Animation for Metrics (RETAINED) ---
        const observerOptions = {
            root: null,
            rootMargin: '0px',
            threshold: 0.5
        };

        const numberObserver = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const target = entry.target;
                    const endValueText = target.textContent;
                    const endValue = parseFloat(endValueText.replace(/[^\d.]/g, ''));
                    let startValue = 0;
                    const duration = 2000;
                    let startTime = null;

                    function animateNumber(currentTime) {
                        if (!startTime) startTime = currentTime;
                        const progress = (currentTime - startTime) / duration;
                        const currentValue = Math.min(progress, 1) * endValue;
                        
                        let displayValue = (Math.round(currentValue * 100) / 100);
                        
                        if (endValueText.includes('B+')) displayValue += 'B+';
                        if (endValueText.includes('%')) displayValue += '%';
                        if (endValueText.includes('24/7')) displayValue = '24/7';

                        target.textContent = displayValue;
                        
                        if (progress < 1 && displayValue !== '24/7') {
                            requestAnimationFrame(animateNumber);
                        } else {
                            target.textContent = endValueText; 
                        }
                    }
                    requestAnimationFrame(animateNumber);
                    observer.unobserve(target);
                }
            });
        }, observerOptions);

        document.querySelectorAll('.animated-number').forEach(number => {
            numberObserver.observe(number);
        });

    </script>
</body>
</html>
